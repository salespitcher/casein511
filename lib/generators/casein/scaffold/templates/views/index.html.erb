<!-- Scaffolding generated by Casein <%= casein_get_full_version_string %> -->

<div class="card bordered" style="margin-top:20px;">
  <div class="card-header" style="position:relative;">
    <div class="card-title"><%= @casein_page_title %></div>
    <div class="small grey-text"><%= plural_name.humanize.capitalize %><%%= casein_pagination_details @<%= plural_name %> %></div>
    <div class="floating-actions">
      <button type="submit" class="btn btn-round btn-primary">
        <span class="md md-check"></span>
        <div class="ripple-wrapper"></div>
      </button>
    </div>
  </div>
  <div class="card-content">
    <%%= render :partial => 'casein/<%= plural_name %>/table', :locals => { :<%= plural_name %> => @<%= plural_name %> } %>
  </div>
  <div class="card-action clearfix">
    <div class="text-center">
      <%%= will_paginate @<%= plural_name %> %>
    </div>
  </div>
</div>

<div class="footer-buttons">
  <%%= link_to "<i class='md md-add'></i>".html_safe, new_casein_<%= singular_name %>_path, :class => "btn btn-primary btn-round" %>
</div>


<%%= content_for :sidebar do %>
<% unless @read_only %>
	<li><%%= link_to "#{casein_show_icon "plus-sign"}Add a new <%= singular_name.humanize.downcase %>".html_safe, new_casein_<%= singular_name %>_path %></li>
<% end %>
<%% end %>