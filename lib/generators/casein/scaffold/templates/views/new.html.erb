<!-- Scaffolding generated by Casein <%= casein_get_full_version_string %> -->

<%%= form_for @<%= file_name %>, :url => casein_<%= @plural_route %>_path, :html => {:class => "form-floating"} do |f| %>

<div class="card bordered" style="margin-top:20px;">
  <div class="card-header" style="position:relative;">
    <div class="card-title"><%= @casein_page_title %></div>
    <div class="small grey-text">Add a new <%= singular_name.humanize.downcase %></div>
  </div>
  <div class="card-content">
    <%%= render :partial => 'casein/<%= plural_name %>/form', :locals => { :f => f } %>
  </div>
  <div class="card-action clearfix">
    <%%= link_to 'Cancel', casein_<%= @plural_route %>_path, :class => 'btn btn-mini btn-danger' %>
		<%%= f.submit "Save changes", :class => "btn btn-mini btn-primary" %>
  </div>
</div>


<div class="footer-buttons">
  <%%= f.submit "<i class='md md-check'></i>".html_safe, :class => "btn btn-primary btn-round" %>
</div>


<%% end %>




<%%= content_for :sidebar do %>
<li><%%= link_to "#{casein_show_icon "th-list"}Back to list".html_safe, casein_<%= @plural_route %>_path %></li>
<%% end %>